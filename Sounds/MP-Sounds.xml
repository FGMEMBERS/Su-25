<?xml version="1.0"?>

<PropertyList>

<fx>

<!-- External Sounds -->
 
 <!-- Engines-->
 
  
  <engine>
   <name>Engine Exhaust</name>
   <mode>looped</mode>
   <path>Aircraft/Su-25/Sounds/Samples/Engine-Turbine.wav</path>
   <condition>
    	<property>/engines/engine/running</property>
    	 <not>
         	<property>/sim/current-view/internal</property>
	 	<property>/engines/engine/out-of-fuel</property>
     	</not>
   </condition>
   <position>
    	<x>6.0</x>
	<y>0.0</y>
	<z>0.0</z>
   </position>
   <orientation>
	<x>90.0</x>
    	<y>0.0</y>
    	<z>0.0</z>
    	<inner-angle>80.0</inner-angle>
   	<outer-angle>110.0</outer-angle>
   	<outer-gain>0.5</outer-gain>
   </orientation>
   <volume>
        <property>engines/engine/n2</property>
        <factor>0.08</factor>
        <min>0.4</min>
	<max>1.0</max>
   </volume>
   <pitch>
    	<property>engines/engine/n2</property>
	<factor>0.005</factor>
	<min>0</min>
	<max>0.7</max>
   </pitch>
    <reference-dist>600.0</reference-dist>
        <max-dist>6000.0</max-dist>
  </engine>
  
  <engine>
   <name>Engine Thrust LowFreq</name>
   <mode>looped</mode>
   <path>Aircraft/Su-25/Sounds/Samples/Engine-Low-Freq.wav</path>
   <condition>
    	<property>/engines/engine/running</property>
     	<not>
        	<property>/sim/current-view/internal</property>
		<property>/engines/engine/out-of-fuel</property>
     	</not>
   </condition>
   <position>
    	<x>10.0</x>
	<y>0.0</y>
	<z>0.0</z>
   </position>
   <orientation>
	<x>90.0</x>
    	<y>0.0</y>
    	<z>0.0</z>
    	<inner-angle>0.0</inner-angle>
    	<outer-angle>160.0</outer-angle>
    	<outer-gain>0.5</outer-gain>
   </orientation>
   <volume>
    	<property>engines/engine/thrust-lbs</property>
    	<factor>0.0001</factor>
    	<offset>0.25</offset>
	<min>0.0</min>
	<max>1.0</max>
   </volume>
    <reference-dist>600.0</reference-dist>
        <max-dist>6000.0</max-dist>
  </engine>
  
 

 
  <!-- flyby -->
		<flyby>
			<name>fly-by</name>
			<mode>looped</mode>
			<path>Aircraft/Su-25/Sounds/Samples/flyby.wav</path>
			<condition>
			<and>
	    <greater-than>
	     	<property>/velocities/mach</property>
	     	<value>0.3</value>
	    </greater-than>
				<equals>
					<property>sim/current-view/view-number</property>
					<value>6</value>
				</equals>
				</and>
				<not>
         	<property>/sim/current-view/internal</property>
	 	<property>/engines/engine/out-of-fuel</property>
     	</not>
		</condition>
			<!-- <volume>
				<property>velocities/airspeed-kt</property>
				<factor>0.001</factor>
			</volume>
			-->
		</flyby>


<guns>
      <name>gunfire</name>
      <mode>looped</mode>
      <path>Aircraft/Su-25/Sounds/Samples/gun.wav</path>
      <condition> 
        <property>controls/armament/trigger</property>
        <property>ai/submodels/submodel/count</property>
      </condition>
      <volume> 
        <factor>1.2</factor>
        <max>1.0</max>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
	  <reference-dist>600.0</reference-dist>
    <max-dist>1000.0</max-dist>
	  
    </guns>

	
	</fx>
</PropertyList>
