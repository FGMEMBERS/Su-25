<?xml version="1.0"?>

<!-- Effects by Raptor and Petar Jedvaj -->

<PropertyList>

	<!-- Weapons effects -->
	
	<model>
		<name>flame</name>
		<path>Aircraft/Su-25/Models/Effects/Gun/Flame.xml</path>
		<condition>
			<equals>
				<property>controls/armament/trigger</property>
				<value type="bool">true</value>
			</equals>
		</condition>
	</model>
	
	<!-- Engines effects -->

	<model>
		<name>fire</name>
