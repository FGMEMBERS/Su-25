<PropertyList>

	<!-- nav lights -->
	<!-- green and red navigation lights, usually mounted on the wingtips -->
	<!-- note: default orientation is up -->
	<model>
		<name>GreenLight</name>
		<path>Aircraft/Su-25/Models/Lights/GreenLight.xml</path>
		<offsets>
			<x-m>1.1767</x-m>
			<y-m>7.2540</y-m>
			<z-m>1.8646</z-m>
			<roll-deg>-90</roll-deg>
			<pitch-deg>-5</pitch-deg> <!-- due to roll, this tunes heading - I want it to point 5 deg more forward -->
		</offsets>
	</model>
  
	<model>
		<name>RedLight</name>
		<path>Aircraft/Su-25/Models/Lights/RedLight.xml</path>
		<offsets>
			<x-m> 1.1767</x-m>
			<y-m>-7.2540</y-m>
			<z-m> 1.8646</z-m>
			<roll-deg>90</roll-deg>
			<pitch-deg>-5</pitch-deg> <!-- due to roll, this tunes heading - I want it to point 5 deg more forward -->
		</offsets>
	</model>
  
