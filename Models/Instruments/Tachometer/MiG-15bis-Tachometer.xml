	<animation>
		<type>rotate</type>
		<object-name>TC_Needle</object-name>
		<property>fdm/jsbsim/systems/tachometer/indicated-rpm</property>
		<interpolation>
			<entry><ind>0.0</ind><dep>0.0</dep></entry>
			<entry><ind>15000.0</ind><dep>540.0</dep></entry>
		</interpolation>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>  
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

