<PropertyList>

  <path>MiG-15bis-Tachometer.ac</path> 

      <effect>
            <inherits-from>Effects/model-transparent</inherits-from>
            <object-name>TC_Glass</object-name>
      </effect>

	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>30</max-m>
	</animation>

	<animation>
		<type>material</type>
		<object-name>TC_Needle</object-name>
		<object-name>TC_Backplate</object-name>
  		<emission>
			<factor-prop>systems/electrical-real/outputs/engine_control/volts-norm</factor-prop>
			<red>0.222</red>
			<green>0.212</green>
			<blue>0.212</blue>
		</emission>
	</animation>

