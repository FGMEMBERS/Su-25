<?xml version="1.0"?>

<PropertyList>

	<path>Rocket.ac</path>
	
	<!--  Rotate flame -->
	
	<animation>
		<type>rotate</type>
		<object-name>flame-one</object-name>
		<property>/sim/time/elapsed-sec</property>
		<factor>-30</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>flame-two</object-name>
		<property>/sim/time/elapsed-sec</property>
		<factor>40</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<!-- Smoke -->
	
	<model>
		<path>Aircraft/Su-25/Models/Effects/UB-32/Smoke.xml</path>
		<offsets>
			<x-m>2</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</offsets>
	</model>

</PropertyList>